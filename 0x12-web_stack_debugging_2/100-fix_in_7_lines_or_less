#!/usr/bin/env bash
# This script makes sure that Nginx is running as the nginx user and listens to port 8080
pkill -f apache2
chmod 644 /etc/nginx/nginx.conf
sed -i "1i user nginx;" /etc/nginx/nginx.conf
sed -i -E 's/listen\s*80\s*default_server;/listen 8080 default_server;/' '/etc/nginx/sites-available/default'
sudo -u nginx service nginx restart
